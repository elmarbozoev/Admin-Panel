@model DateTime

@{
    var now = DateTime.Now;
}


<h2>Create news</h2>
<form method="post" asp-action="Create" asp-controller="News" asp-route-dateOfPublication="@now.ToString()" enctype="multipart/form-data">
    <label for="news-name">News name:</label><br />
    <input class="input" id="news-name" type="text" name="name" /><br />

    <label for="news-description">News description:</label><br />
    <textarea class="input" id="news-description" type="text" name="description"></textarea><br />

    <label class="pic"  for="news-pictures">News pictures</label><br />
    <input class="input" type="file" multiple name="uploadedFiles" value="Choose pictures" /><br />

    <input class="input" type="submit" value="Create" />
</form>


<form asp-action="Index" asp-controller="News" method="get">
    <input type="submit" value="Back" />
</form>

