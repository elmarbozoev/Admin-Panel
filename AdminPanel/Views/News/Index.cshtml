@model List<News>

<style>
    table {
        table-layout:fixed;
        border-collapse:collapse;
        width: 100%;
    }

    th {
        text-align:center;
    }

    td {
        width: 25%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: center;
    }

</style>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Pictures</th>
        <th colspan="2" style="text-align:center;">Actions</th>
    </tr>
    @foreach(var news in Model)
    {
        <tr>
            <td><a asp-controller="News" asp-action="ShowNews" asp-route-newsId="@news.Id">@news.Name</a></td>
            <td>@news.Description</td>
            <td>
                <img height="50px" src="@news?.Pictures?.ToList()[news.MainPictureIndex].Path" alt="@news?.Pictures?.ToList()[news.MainPictureIndex].Name">
                <form method="get" asp-action="EditPictures" asp-controller="News" asp-route-id="@news.Id">
                    <input type="submit" value="Show all pictures" />
                </form>
            </td>
            <td>
                <form method="get" asp-action="EditNews" asp-controller="News" asp-route-id="@news.Id">
                    <input type="submit" value="Edit" />
                </form>
            </td>
            <td>
                <form method="post" asp-action="DeleteNews" asp-controller="News" asp-route-newsId="@news.Id">
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
    }
</table>

<form method="get" asp-controller="News" asp-action="CreateNews">
    <input type="submit" value="Create news" />
</form>