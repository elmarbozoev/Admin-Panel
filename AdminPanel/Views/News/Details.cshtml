@model News

<h1>@Model.Name</h1>

<p>
    @foreach (var mediaFile in Model.MediaFiles)
    {
        <img width="80px" src="@mediaFile.Path" alt="@mediaFile.Name" />
    }
</p>

<p>@Model.Description</p>

<form asp-action="Index" asp-controller="News" method="get">
    <input type="submit" value="Back" />
</form>