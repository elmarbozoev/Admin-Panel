@model News


@*это зачем?))*@
@{
    var pictures = Model?.Pictures?.ToList();
}
@*стили вынести в отдельный файл*@
<style>
    .pictures {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .picture {
        border: 1px solid;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
    }

    .picture form {
        margin-top: 5px;
        display: flex;
        justify-content: center;
        align-content: center;
    }
</style>

<div class="pictures">
    @for(int i = 0; i < pictures?.Count; i++)
    {
        <div class="picture">
            @if (Model.MainPictureIndex == i)
            {
                <span class="pic">The main picture of the news</span>
            }
            <img height="80px" src="@pictures[i].Path" alt="@pictures[i].Name" />
            <form method="post" asp-action="MakeMainPicture" asp-controller="News" asp-route-newsId="@Model.Id" asp-route-pictureIndex="@i">
                <input  type="submit" value="Make the main" />
            </form>
            <form method="post" asp-action="DeletePicture" asp-controller="News" asp-route-pictureId="@pictures[i].Id">
                <input class="input"type="submit" value="Delete" />
            </form>
        </div>
    }
</div>
<form method="post" asp-action="AddPictures" asp-controller="News" asp-route-newsId="@Model.Id" enctype="multipart/form-data">
    <label class="pic">Add pictures:</label><br />
    <input class="input" type="file" multiple name="uploadedFiles" /><br />
    <input class="input" type="submit" value="Add" />
</form>

<form asp-action="Index" asp-controller="News" method="get">
    <input type="submit" value="Back" />
</form>


<style>
.input{
    margin-bottom: 10px;
}

.pic{
    padding-bottom: 5px;
    padding-top:5px;
}
</style>