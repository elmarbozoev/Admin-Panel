@model List<Pictures>

<style>
    .pictures {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .picture {
        border: 1px solid;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
    }

    .picture form {
        margin-top: 5px;
        display: flex;
        justify-content: center;
        align-content: center;
    }
</style>

<div class="pictures">
    @for(int i = 0; i < Model.Count; i++)
    {
        <div class="picture">
            @if (Model[i].News.MainPictureIndex == i)
            {
                <span>The main picture of the news</span>
            }
            <img height="80px" src="@Model[i].Path" alt="@Model[i].Name" />
            <form method="post" asp-action="MakeMainPicture" asp-controller="News" asp-route-newsId="@Model[i].NewsId" asp-route-pictureIndex="@i">
                <input type="submit" value="Make the main" />
            </form>
            <form method="post" asp-action="DeletePicture" asp-controller="News" asp-route-pictureId="@Model[i].Id">
                <input type="submit" value="Delete" />
            </form>
        </div>
    }
</div>
<form method="post" asp-action="AddPictures" asp-controller="News" asp-route-newsId="@Model.First().NewsId" enctype="multipart/form-data">
    <label>Add pictures:</label><br />
    <input type="file" multiple name="uploadedFiles" /><br />
    <input type="submit" value="Add" />
</form>